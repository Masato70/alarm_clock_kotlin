<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#AEDFFA"
                android:endColor="#4A90E2"
                android:angle="45"/>
            <corners android:radius="30dp"/>
            <stroke
                android:width="1dp"
                android:color="#FFFFFF"/> <!-- 白のボーダー -->
            <padding
                android:left="20dp"
                android:top="20dp"
                android:right="20dp"
                android:bottom="20dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#7DA2A9"/> <!-- 押された時はやや濃い色 -->
            <corners android:radius="30dp"/>
            <stroke
                android:width="1dp"
                android:color="#FFFFFF"/>
            <padding
                android:left="20dp"
                android:top="20dp"
                android:right="20dp"
                android:bottom="20dp"/>
        </shape>
    </item>
</selector>
